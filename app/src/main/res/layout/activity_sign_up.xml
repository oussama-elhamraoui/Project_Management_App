<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- LinearLayout to hold all child views in a vertical stack -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

<!--        <ImageView-->
<!--            android:id="@+id/signup_image_view"-->
<!--            android:layout_width="175dp"-->
<!--            android:layout_height="174dp"-->
<!--            android:src="@drawable/signup_image_view"-->
<!--            android:layout_gravity="center_horizontal" />-->

        <TextView
            android:id="@+id/welcome_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/work_sans_bold"
            android:text="Welcome!"
            android:textAlignment="center"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/first_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_background"
            android:hint="First Name"
            android:fontFamily="@font/work_sans_regular"
            android:padding="12dp"
            android:elevation="6dp"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/last_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_background"
            android:hint="Last Name"
            android:fontFamily="@font/work_sans_regular"
            android:padding="12dp"
            android:elevation="6dp"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/email_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_background"
            android:hint="Email"
            android:fontFamily="@font/work_sans_regular"
            android:padding="12dp"
            android:elevation="6dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_background"
            android:hint="Password"
            android:fontFamily="@font/work_sans_regular"
            android:padding="12dp"
            android:elevation="6dp"
            android:textSize="20sp"
            android:inputType="textPassword"
            android:drawableEnd="@drawable/baseline_visibility_24" />

        <EditText
            android:id="@+id/confirm_password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_background"
            android:hint="Confirm Password"
            android:fontFamily="@font/work_sans_regular"
            android:padding="12dp"
            android:elevation="6dp"
            android:textSize="20sp"
            android:inputType="textPassword"
            android:drawableEnd="@drawable/baseline_visibility_24" />

        <Button
            android:id="@+id/sign_up_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_background"
            android:elevation="12dp"
            android:translationZ="12dp"
            android:fontFamily="@font/work_sans_regular"
            android:padding="10dp"
            android:text="Sign Up"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/primary_color" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_background"
            android:elevation="12dp"
            android:translationZ="12dp"
            android:fontFamily="@font/work_sans_regular"
            android:padding="10dp"
            android:text="Login"
            android:textSize="20sp"
            android:textColor="@color/primary_color"
            app:backgroundTint="@android:color/white" />

        <Button
            android:id="@+id/continue_with_google_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_background"
            android:elevation="12dp"
            android:translationZ="12dp"
            android:fontFamily="@font/work_sans_regular"
            android:padding="10dp"
            android:text="Continue with Google"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/google_icon"
            app:backgroundTint="@android:color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
