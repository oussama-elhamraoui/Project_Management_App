<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        tools:context=".ui.home.HomeFragment"
        android:background="@color/background_color"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- First Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/fake_person" />
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="15dp"
                android:layout_height="0dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/work_sans_regular"
                    android:text="Hello!"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/work_sans_bold"
                    android:text="Username"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_notification_on" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <!-- Second Row (Purple Section) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="26dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="horizontal"
                android:background="#5F33E1"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="137dp"
                        android:layout_height="wrap_content"
                        android:text="Your todayâ€™s task almost done!"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:fontFamily="@font/poppins_medium" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <include layout="@layout/btn_view_tasks" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/progress_bar"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:progress="74"
                        app:indicatorSize="74dp"
                        android:layout_gravity="center"
                        app:trackCornerRadius="10dp"
                        app:trackThickness="7.5dp"
                        app:trackColor="#8764FF"
                        app:indicatorTrackGapSize="0dp"
                        app:indicatorColor="#FFFFFF"
                        app:indicatorDirectionCircular="counterclockwise" />

                    <TextView
                        android:id="@+id/ciruclar_progress_bar_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="74%"
                        android:textSize="14sp"
                        android:fontFamily="@font/radio_canada_medium"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="center" />
                </FrameLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <androidx.cardview.widget.CardView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#8764FF">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="3dp"
                        android:src="@drawable/ic_more" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />


        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_projects"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

            android:name="com.example.projectmanagementapp.ui.home.FragmentProjects" />
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:text="Tasks Stats"
        android:textColor="#000000"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_semi_bold" />

    </LinearLayout>

