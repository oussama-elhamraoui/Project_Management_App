<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">

            <solid android:color="#0D000000"/> <!-- Translucent shadow color -->
            <corners android:radius="30dp" />
        </shape>
    </item>

    <!-- Main Content Layer -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="30dp" />
        </shape>
    </item>
</layer-list>